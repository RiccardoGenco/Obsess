script/source = "extends VBoxContainer

# Percorso della scena da caricare
const FIRST_LEVEL_PATH := \"res://level_test.tscn\"

func _ready() -> void:

    # Collego i pulsanti (assicurati che si chiamino esattamente \"Start\" e \"Quit\")
    if has_node(\"Start\"):
        $Start.pressed.connect(_on_Start_pressed)
    if has_node(\"Quit\"):
        $Quit.pressed.connect(_on_Quit_pressed)

func _process(delta: float) -> void:
    # Controllo input controller
    if Input.is_action_just_pressed(\"ui_accept\"):
        _on_Start_pressed()
    if Input.is_action_just_pressed(\"ui_cancel\"):
        _on_Quit_pressed()

# ----------------------------
# Funzioni dei pulsanti
# ----------------------------
func _on_Start_pressed() -> void:
    if ResourceLoader.exists(FIRST_LEVEL_PATH):
        get_tree().change_scene(FIRST_LEVEL_PATH)
    else:
        push_error(\"Percorso livello non trovato: \" + FIRST_LEVEL_PATH)

func _on_Quit_pressed() -> void:
    get_tree().quit()
"

